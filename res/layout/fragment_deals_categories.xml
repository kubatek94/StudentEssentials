<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" >

            <ImageButton
                android:id="@+id/category_books"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_books" />

            <ImageButton
                android:id="@+id/category_clothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_clothing" />

            <ImageButton
                android:id="@+id/category_electronics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_electronics" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp" >

            <ImageButton
                android:id="@+id/category_gaming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_gaming" />

            <ImageButton
                android:id="@+id/category_groceries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_groceries" />

            <ImageButton
                android:id="@+id/category_mobiles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_mobiles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" >

            <ImageButton
                android:id="@+id/category_restaurants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_restaurants" />

            <ImageButton
                android:id="@+id/category_travel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_travel" />

            <ImageButton
                android:id="@+id/category_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@android:drawable/btn_dialog"
                android:src="@drawable/icon_other" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>