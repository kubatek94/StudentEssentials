<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5fc"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp" >

    <!-- left side -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/deal_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:maxLines="1"
            android:text="Assassins Creed half price"
            android:textSize="14sp"
            android:textColor="#273e45"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deal_item_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="3"
            android:textColor="#273e45"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam massa ipsum, luctus ac vestibulum quis, sagittis nec"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- right side -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/deal_item_category"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_other" />

        <TextView
            android:id="@+id/deal_item_score"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="148"
            android:textStyle="bold"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>