<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#f5f5fc"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!-- left side -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rss_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:maxLines="2"
            android:text="Newcastle University News"
            android:textSize="13sp"
            android:textColor="#273e45"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rss_item_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="5"
            android:textColor="#273e45"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam massa ipsum, luctus ac vestibulum quis, sagittis nec"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- right side -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/rss_item_image"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/news" />

        <TextView
            android:id="@+id/rss_item_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Wed, 15"
            android:textSize="13dp" />

    </LinearLayout>

</LinearLayout>